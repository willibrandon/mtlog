{
  "name": "mtlog-analyzer",
  "displayName": "mtlog-analyzer",
  "description": "Real-time mtlog template validation for Go",
  "icon": "assets/icon.png",
  "version": "0.8.1",
  "publisher": "mtlog",
  "repository": {
    "type": "git",
    "url": "https://github.com/willibrandon/mtlog.git"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Linters"
  ],
  "activationEvents": [
    "onLanguage:go"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mtlog.showOutput",
        "title": "Show mtlog-analyzer output"
      },
      {
        "command": "mtlog.analyzeNow",
        "title": "Analyze current file with mtlog-analyzer"
      },
      {
        "command": "mtlog.saveAndAnalyze",
        "title": "Save and Analyze File"
      },
      {
        "command": "mtlog.toggleDiagnostics",
        "title": "Toggle mtlog Diagnostics"
      },
      {
        "command": "mtlog.suppressDiagnostic",
        "title": "Suppress This mtlog Diagnostic"
      },
      {
        "command": "mtlog.showSuppressionManager",
        "title": "Manage Suppressed mtlog Diagnostics"
      },
      {
        "command": "mtlog.unsuppressAll",
        "title": "Unsuppress All mtlog Diagnostics"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "mtlog.toggleDiagnostics",
          "when": "resourceExtname == .go"
        },
        {
          "command": "mtlog.showSuppressionManager",
          "when": "resourceExtname == .go"
        },
        {
          "command": "mtlog.unsuppressAll",
          "when": "resourceExtname == .go"
        }
      ]
    },
    "keybindings": [
      {
        "command": "mtlog.toggleDiagnostics",
        "key": "ctrl+alt+m",
        "mac": "cmd+alt+m",
        "when": "editorTextFocus && resourceExtname == .go"
      }
    ],
    "configuration": {
      "title": "mtlog-analyzer",
      "properties": {
        "mtlog.analyzerPath": {
          "type": "string",
          "default": "mtlog-analyzer",
          "description": "Path to mtlog-analyzer executable"
        },
        "mtlog.analyzerFlags": {
          "type": "array",
          "default": [],
          "description": "Additional flags for mtlog-analyzer (e.g. [\"-strict\"])"
        },
        "mtlog.diagnosticsEnabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable all mtlog diagnostics"
        },
        "mtlog.suppressedDiagnostics": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["MTLOG001", "MTLOG002", "MTLOG003", "MTLOG004", "MTLOG005", "MTLOG006", "MTLOG007", "MTLOG008"],
            "enumDescriptions": [
              "Template/argument count mismatch",
              "Invalid format specifier", 
              "Duplicate property names",
              "Property naming (PascalCase)",
              "Missing capturing hints",
              "Error logging without error value",
              "Context key constant suggestion",
              "Dynamic template warning"
            ]
          },
          "default": [],
          "description": "List of diagnostic IDs to suppress",
          "uniqueItems": true
        },
        "mtlog.maxConcurrentAnalyses": {
          "type": ["number", "null"],
          "minimum": 1,
          "default": null,
          "description": "Maximum number of files to analyze concurrently (defaults to CPU cores - 1 when not set)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "cd ../../vscode-extension-tests && npm install && npm run compile && npm test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.1",
    "@types/node": "18.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.57.0",
    "mocha": "^10.1.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "glob": "^11.0.3"
  }
}
