<idea-plugin>
    <id>com.mtlog.goland</id>
    <name>mtlog-analyzer</name>
    <vendor email="support@mtlog.com" url="https://github.com/willibrandon/mtlog">mtlog</vendor>
    
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.lang</depends>
    <depends>org.jetbrains.plugins.go</depends>
    <depends>com.intellij.modules.go-capable</depends>
    
    <resource-bundle>messages.MtlogBundle</resource-bundle>
    
    <extensions defaultExtensionNs="com.intellij">
        <externalAnnotator 
            language="go"
            implementationClass="com.mtlog.goland.annotator.MtlogExternalAnnotator"/>
            
        <localInspection 
            language="go"
            implementationClass="com.mtlog.goland.inspection.MtlogBatchInspection"
            runForWholeFile="true"
            displayName="mtlog template validation"
            groupName="Go"
            enabledByDefault="false"
            level="ERROR"
            shortName="MtlogTemplateValidation">
            <quickFix order="first" displayName="Convert to PascalCase" 
                     familyName="mtlog quick fixes"
                     implementationClass="com.mtlog.goland.quickfix.PascalCaseQuickFix"/>
            <quickFix order="first" displayName="Fix template arguments" 
                     familyName="mtlog quick fixes"
                     implementationClass="com.mtlog.goland.quickfix.TemplateArgumentQuickFix"/>
        </localInspection>
        
        <projectService 
            serviceImplementation="com.mtlog.goland.service.MtlogProjectService"/>
            
        <projectConfigurable
            parentId="tools"
            instance="com.mtlog.goland.settings.MtlogSettingsConfigurable"
            id="mtlog.settings"
            displayName="mtlog-analyzer"/>
            
        <advancedSetting 
            id="mtlog.debounce.delay"
            service="com.mtlog.goland.settings.MtlogAdvancedSettings"
            default="300"/>
            
        <notificationGroup id="mtlog.notifications" displayType="BALLOON"/>
    </extensions>
    
    <actions>
        <action id="mtlog.analyzer.install"
                class="com.mtlog.goland.actions.InstallAnalyzerAction"
                text="Install mtlog-analyzer"
                description="Install mtlog-analyzer using go install">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>